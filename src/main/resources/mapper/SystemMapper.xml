<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xj.iws.http.dao.SystemDao">

    <sql id="field">date,name,pic,describes</sql>

    <resultMap id="SystemEntity" type="com.xj.iws.http.entity.SystemEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="date" property="date" jdbcType="DATE"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="pic" property="pic" jdbcType="VARCHAR"/>
        <result column="describes" property="describes" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="add" parameterType="SystemEntity">
        INSERT INTO system (<include refid="field"/>) VALUES ('${strdate}','${name}','${pic}','${describes}')
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM system WHERE id = ${_parameter}
    </delete>

    <update id="update" parameterType="SystemEntity">
        UPDATE system
        <set>
            <if test="name != null">name = '${name}',</if>
            <if test="pic != null">pic = '${pic}',</if>
            <if test="describes != null">describe = '${describes}',</if>
        </set>
        WHERE id = ${id}
    </update>

    <select id="list" resultMap="SystemEntity">
        SELECT id,
        <include refid="field"/>
        FROM system ORDER BY id
    </select>

    <select id="detail" parameterType="int" resultMap="SystemEntity">
        SELECT id,
        <include refid="field"/>
        FROM system WHERE id = ${_parameter}
    </select>

    <select id="pic" resultType="String">
        SELECT url FROM img WHERE name = 'system'
    </select>

</mapper>
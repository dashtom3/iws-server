<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xj.iws.http.dao.UserManageDao">

    <sql id="field">username,password,roleid,status,date,name,address,describes,pic</sql>

    <resultMap id="UserEntity" type="com.xj.iws.http.entity.UserEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="roleid" property="roleId" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="date" property="date"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="describes" property="describes" jdbcType="VARCHAR"/>
        <result column="pic" property="pic" jdbcType="VARCHAR"/>
    </resultMap>

    <update id="role" parameterType="UserEntity">
        UPDATE user
        <set>
            roleid = '${roleId}'
        </set>
        WHERE id = ${id}
    </update>

    <update id="status" parameterType="UserEntity">
        UPDATE user
        <set>
            status = ${status}
        </set>
        WHERE id = ${id}
    </update>

    <select id="list" resultMap="UserEntity">
        SELECT id,
        <include refid="field"/>
        FROM user ORDER BY id
    </select>

    <select id="query" resultMap="UserEntity">
        SELECT id,
        <include refid="field"/>
        FROM user
        <where>
            <if test="username != null">AND username LIKE '%${username}%'</if>
            <if test="name != null">AND name LIKE '%${name}%'</if>
            <if test="address != null">AND address LIKE '%${address}%'</if>
        </where>
        ORDER BY id
    </select>

</mapper>
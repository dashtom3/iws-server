<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xj.iws.dao.RoomDao">

    <sql id="field">locationid,name</sql>

    <resultMap id="BaseResultMap" type="com.xj.iws.entity.RoomEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="locationId" property="locationid" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="RoomEntity" type="com.xj.iws.entity.RoomEntity" extends="BaseResultMap">
    </resultMap>

    <insert id="add" parameterType="RoomEntity">
        INSERT INTO room (<include refid="field" />) VALUES (${locationId},'${name}')
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM room WHERE id = ${_parameter}
    </delete>

    <update id="update" parameterType="RoomEntity">
        UPDATE room
        <set>
            <if test="locationId != null">locationid = ${locationId},</if>
            <if test="name != null">name = '${name}',</if>
        </set>
        WHERE id = ${id}
    </update>

    <select id="list" parameterType="int" resultMap="RoomEntity">
        SELECT id,<include refid="field" /> FROM room WHERE locationid = ${_parameter}
    </select>

    <select id="detail" parameterType="int" resultMap="RoomEntity">
        SELECT id,<include refid="field" /> FROM room WHERE id = ${_parameter}
    </select>

</mapper>
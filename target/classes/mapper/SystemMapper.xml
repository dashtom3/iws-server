<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xj.iws.dao.SystemDao">

    <sql id="field">name,pic</sql>

    <resultMap id="BaseResultMap" type="com.xj.iws.entity.SystemEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="pic" property="pic" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="SystemEntity" type="com.xj.iws.entity.SystemEntity" extends="BaseResultMap">
    </resultMap>

    <insert id="add" parameterType="SystemEntity">
        INSERT INTO system (<include refid="field" />) VALUES (${name},${pic})
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM system WHERE id = ${id}
    </delete>

    <update id="update" parameterType="SystemEntity">
        UPDATE system
        <set>
            <if test="name != null">name = ${name},</if>
            <if test="pic != null">pic = ${pic},</if>
        </set>
        WHERE id = ${id}
    </update>

    <select id="list" resultMap="SystemEntity">
        SELECT id,name,pic FROM system
    </select>

    <select id="detail" parameterType="int" resultMap="SystemEntity">
        SELECT id,name,pic FROM system WHERE id = ${id}
    </select>

</mapper>
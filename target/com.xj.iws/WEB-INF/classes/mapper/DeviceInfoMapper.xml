<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xj.iws.http.dao.DeviceInfoDao">

    <sql id="field">roomid,devicetype,parameterid,com,num,status,name,describes</sql>

    <resultMap id="DeviceInfoEntity" type="com.xj.iws.http.entity.DeviceInfoEntity">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="protocol" property="protocol" jdbcType="VARCHAR"/>
        <result column="parameter" property="parameter" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="pic" property="pic" jdbcType="VARCHAR"/>
        <result column="describes" property="describes" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="list" resultMap="DeviceInfoEntity">
        SELECT id,
        <include refid="field"/>
        FROM deviceinfo ORDER BY id
    </select>

    <update id="update" parameterType="DeviceInfoEntity">
        UPDATE deviceinfo
        <set>
            <if test="name != null">name = '${name}',</if>
            <if test="pic != null">pic = '${pic}',</if>
            <if test="describes != null">describes = '${describes}',</if>
        </set>
        WHERE id = ${id}
    </update>

</mapper>